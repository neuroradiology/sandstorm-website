{
    "version": "v1.0.0",

    // Required. The entity associated with the project, soliciting funds.
    // This can be an individual, organisation, community etc.
    "entity": {
        "type": "community",                     // Required. [individual, group, organisation, other]. Use the closest approximation.
        "role": "maintainer",                     // Required. [owner, steward, maintainer, contributor, other]. Use the closest approximation.
        "name": "Sandstorm Community",                     // Required. Name of the entity. Max len 250.
        "email": "funding@sandstorm.org",                    // Required. Max len 250.
        "phone": "",                    // Optional. Generally suitable for organisations. Max len 32.
        "description": "The Sandstorm Community is a community-run organization launched to continue the self-hosting platform originally launched as Sandstorm.io back in 2014. We have the endorsement and support of the project's creator, but need additional resources in order to shore up some challenges and ensure the platform can not just be relied upon for years to come, but to introduce new capabilities.",              // Required. Information about the entity. Max len 2000.
        "webpageUrl": {
            "url": "https://sandstorm.org",                  // Required. Webpage with information about the entity. Starts with https:// or http://. Max len 250.
            "wellKnown": ""             // Optional. Required if the above url and the URL of the funding.json manifest do not have the same hostname. Starts with https:// or http://. Max len 250.
        }
    },

    // Optional. One or more projects for which the funding is solicited.
    "projects": [{
        "guid": "sandstorm",                     // Required. A short unique ID for the project. Lowercase-alphanumeric-dashes only. eg: my-cool-project. Max len 32.
        "name": "Sandstorm",                     // Required. Name of the project. Max len 250.
        "description": "Sandstorm is a self-hostable web productivity suite. It's implemented as a security-hardened web app package manager.",              // Required. Description of the project. Max len 2000.
        "webpageUrl": {
            "url": "https://sandstorm.org",                  // Required. Webpage with information about the project. Starts with https:// or http://. Max len 250.
            "wellKnown": ""             // Optional. Required if the above url and the URL of the funding.json manifest do not have the same hostname. Starts with https:// or http://. Max len 250.
        },
        "repositoryUrl": {
            "url": "https://github.com/sandstorm-io/sandstorm",                  // Required. URL of the repository where the project's source code and other assets are available. Starts with https:// or http://. Max len 250.
            "wellKnown": ""             // Optional. Required if the above url and the URL of the funding.json manifest do not have the same hostname. Starts with https:// or http://. Max len 250.
        },
        "licenses": [spdx:Apache-2.0],                 // Required. The project's licenses (up to 5). For standard licenses, use the license ID from the SDPX index prefixed by "spdx:". eg: "spdx:GPL-3.0", "spdx:CC-BY-SA-4.0"
        "tags": ["decentralized", "selfhosting", "containerization"]                      // Required. Up to 10 general tags describing the project. Lowercase-alphanumeric-dashes (max 32 chars). eg: ["programming", "developer-tools"]. For reference, see tags.txt
    }],

    // Required.
    "funding": {
        // Required. This describes one or more channels via which the entity can receive funds.
        "channels": [{
            "guid": "opencollective",                 // Required. A short unique ID for the channel. Lowercase-alphanumeric-dashes only. eg: mybank, my-paypal. Max len 32.
            "type": "other",                 // Required. [bank, gateway, cheque, cash, other].
            "address": "https://opencollective.com/sandstormcommunity",              // Optional. A short unstructured textual representation of the payment address for the channel. eg: "Account: 12345 (branch: ABCX)", "mypaypal@domain.com", "https://payment-url.com", or a physical address for cheques. Max len 250.
            "description": ""           // Optional. Any additional description or instructions for the payment channel. Max len 500.
        }],

        // Required. One or more funding and payment plans.
        "plans": [{
            "guid": "upgrade-and-fork",                 // Required. A short unique ID for the plan. Lowercase-alphanumeric-dashes only. eg: mybank, paypal. Max len 32.
            "status": "active",               // Required. [active, inactive]. Indicates whether this plan is currently active or inactive.
            "name": "Release fork with updates",                 // Required. Name of the funding plan. eg: "Starter support plan", "Infra hosting", "Monthly funding plan".
            "description": "Since moving to a community-run organization, we have been preparing to complete a major database migration and dependency upgrade which should help secure and support our users for the next several years. We've identified a domain expert to handle this work at an extremely reasonable rate, but are short on funding to complete the project.",          // Optional. Any additional description or instructions for the funding plan.
            "amount": 5000,                // Required. The solicited amount for this plan. 0 is a wildcard that indicates "any amount".
            "currency": "USD",             // Required. Three letter ISO 4217 currency code. eg: USD
            "frequency": "one-time",            // Required. [one-time, weekly, fortnightly, monthly, yearly, other]
            "channels": ["opencollective"]              // Required. One or more channel IDs defined in channels[] via which this plan can accept payments.
        }]
    }
}
